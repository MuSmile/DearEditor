QSplitter::handle
{
	border: 0;
}

QSplitter::handle:horizontal
{
	background-color: #252525;
	width: 3px;
}

QSplitter::handle:vertical
{
	background-color: #252525;
	height: 3px;
}

QScrollArea { background: transparent; }
QScrollArea > QWidget > QWidget { background: transparent; }

/*QGraphicsView
{
	selection-background-color: #4bf;
}*/

DropDownMenu
{
	border: 1px solid #333;
	border-radius: 2px;
	background: #555;
}

DropDownMenuPage > QPushButton,
DropDownMenuPage > QPushButton:hover
{
	margin: 0px;
	border: 0px;
	border-top: 1px solid #444;
	border-bottom: 1px solid #444;
	border-radius: 0px;
	background: #777;
	/*font-weight: bold;*/
	font-size: 12px;
	padding: 0 0 1 0;
	color: #fff;
	height: 16px;
}

DropDownMenuPage > QListView
{
	margin: 0px;
	border: 0px;
	background: #585858;
}
DropDownMenuPage QScrollBar,
DropDownMenuPage QScrollBar::add-line,
DropDownMenuPage QScrollBar::sub-line
{
	border-left: 1px solid #444;
}
DropDownMenuPage QScrollBar::handle
{
	border-radius: 4px;
}
