*{outline: none;}

QWidget
{
	font-size: &[Font/sizeNormal];
	font-family: &[Font/familyNormal];
    outline: 0;
}

QFrame
{
	border: 0;
	color: #ccc;
	background-color: &[toolbar/colorBg];
}

QLabel
{
	background-color: none;
	color: &[Palette/labelColor];
}

QToolTip
{
    background: #555;
    border: 1px solid #111;
    color: #eee;
    padding: 2px;
}

QLineEdit
{
	background: #555;
	border: 1px solid #333;
	border-radius: 2px;
	padding-right: 2px;
	padding-left: 2px;
	height: 18px;
	font-size: 12px;
	color: #eee;
}
QLineEdit:hover
{
	border: 1px solid #222;
}
QLineEdit:focus
{
	border: 1px solid #5ae;
}

SearchField
{
	background: #555;
	border: 1px solid #222;
	border-radius: 2px;
	padding-right: 12px;
	padding-left: 16px;
	height: 16px;
	font-size: 11px;
	color: #eee;
}
