*{outline: none;}

QWidget
{
	font-size: &[Font/sizeNormal];
	font-family: &[Font/familyNormal];
    outline: 0;
}

QFrame
{
	border: 0;
	background-color: &[toolbar/colorBg];
}

QLabel
{
	background-color: none;
	/*color: &[Palette/labelColor];*/
	color: #ccc;
}

QToolTip
{
    background: #555;
    border: 1px solid #111;
    color: #eee;
    padding: 2px;
}

QLineEdit
{
	background: #333;
	border: 1px solid #222;
	border-radius: 2px;
	padding-right: 2px;
	padding-left: 2px;
	height: 18px;
	font-size: 12px;
	color: #eee;
	selection-background-color: #36a;
}
LineEdit[text='']
{
	font-size: 10px;
	color: #999;
}
QLineEdit:hover
{
	border: 1px solid #777;
}
QLineEdit:focus
{
	border: 1px solid #5ae;
}
QLineEdit:read-only {
    background: gray;
}

SearchEdit
{
	border: 1px solid #222;
	border-radius: 2px;
	padding-right: 12px;
	padding-left: 16px;
	color: #eee;
}

/*
Slider
{
	qproperty-grooveHeight: 2;
	qproperty-grooveRoundRadius: 0;
}*/

QSlider::groove:horizontal {
    background: #777;
    border: none;
    border-radius: 2px;
    height: 2px;
	margin-left: 4px;
	margin-right: 4px;
}

QSlider::handle:horizontal {
    background: #888;
    border: 1px solid #888;
    border-radius: 6px;
    width: 10px;
    margin: -5px 0;
}
QSlider::handle:horizontal:focus {
    background: qradialgradient(cx:0.5, cy:0.5, radius: 1, fx:0.5, fy:0.5, stop:0.28 #ddd, stop:0.32001 rgba(85, 170, 238, 60));
    border: none;
    border-radius: 10px;
    width: 20px;
    margin: -9px -4;
}
QSlider::handle:hover {
    background: #ddd;
}

RangeSlider
{
	qproperty-grooveHeight: 2;
	qproperty-grooveRoundRadius: 0;
	qproperty-handleRadius: 6;
	qproperty-grooveBackground: #777;
	qproperty-handleBackground: #888;
	qproperty-handleHovered: #ddd;
}

QToolButton
{
	background-color: #444;
	border: 1px solid &[toolbar/colorBg];
	border-radius: 2px;
	color: &[toolbar/colorLabel];
	padding: 2px;
}

QToolButton:hover
{
	background-color: #555;
	color: &[toolbar/colorLabel];
}

QToolButton:checked, QToolButton:pressed
{
	background-color: #777;
	color: &[toolbar/colorLabel];
}

QToolButton:disabled
{
	background-color: #303030;
	color: &[toolbar/colorLabel];
}

QToolButton[popupMode='MenuButtonPopup'] { /* only for MenuButtonPopup */
    padding-right: 16px;
}

QToolButton::menu-button {
    image: url(img/menu_indicator.svg);
	border-left: 1px solid #333;
    width: 12px;
    margin: 4px 0 4 0;
    padding: 2px 3 0 2;
}

QToolButton[popupMode='InstantPopup'] { /* only for MenuButtonPopup */
    padding-right: 12px;
}

QToolButton::menu-indicator {
    image: url(img/menu_indicator.svg);
    subcontrol-position: right center;
    subcontrol-origin: padding;
    width: 12px;
    height: 12px;
    right: -10px;
    bottom: -1px;
}


QPushButton
{
	background-color: #555;
	border: 1px solid #3c3c3c;
	border-radius: 2px;
	color: &[Palette/labelDeactive];
	padding: 4px;
}

QPushButton:hover/*, QPushButton:focus*/
{
	background-color: #666;
	color: &[Palette/labelColor];
}

QPushButton:pressed, QPushButton:checked
{
	background-color: #777;
	color: &[Palette/labelColor];
}

QPushButton::menu-indicator
{
    image: url(img/menu_indicator.svg);
    subcontrol-position: right center;
    subcontrol-origin: padding;
    width: 12px;
    height: 12px;
    right: 2px;
    bottom: -1px;
}

QCheckBox {
    spacing: 6px;
}
QCheckBox:focus {
	color: #5ae;
}
QCheckBox::indicator {
	background: #333;
	border: 1px solid #222;
	border-radius: 2px;
    /*image: url(img/menu_indicator.svg);*/
    width: 12px;
    height: 12px;
}
QCheckBox::indicator:hover {
	border: 1px solid #777;
}
QCheckBox::indicator:focus {
	border: 1px solid #5ae;
}

QCheckBox::indicator:checked {
    image: url(img/check2.png);
}
QCheckBox::indicator:indeterminate{
    image: url(img/close.png);
}

QRadioButton {
    spacing: 6px;
}
QRadioButton:focus {
	color: #5ae;
}
QRadioButton::indicator {
	background: #333;
	border: 1px solid #222;
	border-radius: 3px;
    /*image: url(img/menu_indicator.svg);*/
    width: 12px;
    height: 12px;
}
QRadioButton::indicator:hover {
	border: 1px solid #777;
}
QRadioButton::indicator:focus {
	border: 1px solid #5ae;
}

QRadioButton::indicator:checked {
    image: url(img/check2.png);
}
QRadioButton::indicator:indeterminate{
    image: url(img/close.png);
}

QSplitter::handle
{
	border: 0;
}

QSplitter::handle:horizontal
{
	background-color: #252525;
	width: 3px;
}

QSplitter::handle:vertical
{
	background-color: #252525;
	height: 3px;
}

QScrollArea { background: #444; }
QScrollArea > #qt_scrollarea_viewport > QWidget { background: #444; }

/*QGraphicsView
{
	selection-background-color: #4bf;
}*/

DropDownMenu
{
	border: 1px solid #333;
	border-radius: 2px;
	background: #555;
}

DropDownMenuPage > QPushButton,
DropDownMenuPage > QPushButton:hover
{
	margin: 0px;
	border: 0px;
	border-top: 1px solid #444;
	border-bottom: 1px solid #444;
	border-radius: 0px;
	background: #777;
	/*font-weight: bold;*/
	font-size: 12px;
	padding: 0 0 1 0;
	color: #fff;
	height: 16px;
}

DropDownMenuPage > QListView
{
	margin: 0px;
	border: 0px;
	background: #585858;
}
DropDownMenuPage QScrollBar,
DropDownMenuPage QScrollBar::add-line,
DropDownMenuPage QScrollBar::sub-line
{
	border-left: 1px solid #444;
}
DropDownMenuPage QScrollBar::handle
{
	border-radius: 4px;
}